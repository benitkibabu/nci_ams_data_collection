<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kibabu.benit.ncistudentapp.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <de.hdodenhof.circleimageview.CircleImageView
        android:contentDescription="Ingredient Icons"
        android:id="@+id/image_holder"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:elevation="6dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginRight="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#862929"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:text="Benit Kibabu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/nameLabel"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/image_holder"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="x08424179"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/studentNumber_Label"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/nameLabel"
        android:layout_alignParentStart="true" />

</RelativeLayout>
